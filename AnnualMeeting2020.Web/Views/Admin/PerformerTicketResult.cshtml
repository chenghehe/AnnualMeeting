<script type="text/javascript">
        $(function () {
            var serverHub = $.connection.AnnualMeeting2020Hub;

            @*投票回调*@
            serverHub.client.finalVote = function (pid, count) {
                $("."+pid).text(count);
            }

            @*开始连接*@
