        .cont {
            width: 384px;
            background-color: #fff;
            position: relative;
        }
        .cont > img {
            position: absolute;
            top: -24px;
            left: -18px;
            width: 110%;
            height: 40px;
        }

        .list .title {
            font-weight: 700;
            font-size: 22px;
            background-color: #FCF6F5;
        }

        .list > div {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 12px;
            background-color: #fff;
            border-bottom: 1px solid #e7e7e7;
        }

        .list .list-name p {
            font-size: 16px;
            margin: 0;
            padding: 0;
        }

        .list .list-name span {
            font-weight: 700;
            font-size: 16px;
        }

        .list .list-song {
